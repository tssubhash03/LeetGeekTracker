{
  "manifest_version": 2,
  "name": "LeetNotes",
  "version": "1.0",
  "description": "Automate LeetCode tracking with GitHub & AI.",
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "https://leetcode.com/*",
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  }
}
